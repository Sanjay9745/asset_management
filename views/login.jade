doctype html
html(lang="en")
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title Asset Management System

        // Google Font
        link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap' rel='stylesheet')

        // Bootstrap CSS
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
        link(rel='stylesheet' type='text/css' href='/styles.css')
        link(rel='stylesheet', href='https://cdn.datatables.net/2.0.5/css/dataTables.dataTables.css')
        script(src='https://cdn.datatables.net/2.0.5/js/dataTables.js')
    body
    block content
        section.p-3.p-md-4.p-xl-5.mt-5
            .container
                .card.border-light-subtle.shadow-sm
                    .row.g-0
                        .col-12.col-md-6
                            img.img-fluid.rounded-start.w-100.h-100.object-fit-cover(loading='lazy' src='./login.avif' alt='BootstrapBrain Logo')
                        .col-12.col-md-6
                            .card-body.p-3.p-md-4.p-xl-5
                                .row
                                    .col-12
                                        .mb-5
                                            h3 Log in
                                form(action='/login' method='POST')
                                    .row.gy-3.gy-md-4.overflow-hidden
                                        .col-12
                                            label.form-label(for='email')
                                                | Email 
                                                span.text-danger *
                                            input#email.form-control(type='email' name='email' placeholder='name@example.com' required='')
                                        .col-12
                                            label.form-label(for='password')
                                                | Password 
                                                span.text-danger *
                                            input#password.form-control(type='password' name='password' value='' required='')
                                        .col-12
                                            .form-check
                                                input#remember_me.form-check-input(type='checkbox' value='' name='remember_me')
                                                label.form-check-label.text-secondary(for='remember_me')
                                                    | Keep me logged in
                                        .col-12
                                            .d-grid
                                                button.btn.bsb-btn-xl.btn-primary(type='submit') Log in now
