extends layout

block content
    .container
        .col-12.form-container.mt-5
            .row.gy-3.gy-md-4
                .col-12
                    .card.widget-card.border-light.shadow-sm
                        .card-header.bg-transparent.p-4.border-light-subtle
                            h5.card-title.widget-card-title.m-0 Add Employee
                        .card-body.p-4
                            form.row.g-3(action='/add-employee' method='POST')
                                .col-md-6
                                    label.form-label(for='name') Name
                                    input#name.form-control(name='name' type='text' placeholder='Enter Employee Name' required)
                                .col-md-6
                                    label.form-label(for='status') Status
                                    select#status.form-select(name='status')
                                        option(value='' disabled selected) Select Status
                                        option(value='active') Active
                                        option(value='inactive') Inactive
                                .col-12
                                    button.btn.btn-primary.btn-lg.w-100(type='submit') Add Employee
                                if message
                                    if message.type === 'success'
                                        .alert.alert-success.alert-dismissible.fade.show(role='alert')
                                            button.close(type='button' data-bs-dismiss='alert' aria-label='Close')
                                                span(aria-hidden='true') &times;
                                            | #{message.text}
                                    else if message.type === 'danger'
                                        .alert.alert-danger.alert-dismissible.fade.show(role='alert')
                                            button.close(type='button' data-bs-dismiss='alert' aria-label='Close')
                                                span(aria-hidden='true') &times;
                                            | #{message.text}
